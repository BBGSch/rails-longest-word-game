<div class="container text-center">
  <div class="p-1">
    <ul class="d-flex list-inline m-1 p-1 justify-content-between">
      <% @letters.each do |letter| %>
      <li class="list-inline-item bg-primary m-3 p-2"> <%= letter %> </li>
      <% end %>
    </ul>
  </div>


  
  <form action="/score" method="post" class="m-4">
    <label id="answer">What is the longest word you can find?</label>
    <input type="text" name="answer" value="<%= params[:answer] %>">
    <input type="submit" value="play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>



  




</div>